generator client {
  provider = "prisma-client-js"
  previewFeatures = ["dataproxy"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Study {
  shortName       String      @unique
  name            String?
  modalities      String[]
  id              Int         @id @default(autoincrement())
  notes           Note[]
  subjects        Subject[]
  sessions        Session[]
  members         User[]
}

model Note {
  id              Int         @id @default(autoincrement())
  content         String?
  author_id       Int?
  enteredBy       User?       @relation(fields: [authorName], references: [username])
  authorName      String
  session         Session?    @relation(fields: [session_id], references: [session_id])
  session_id      String
}

model Profile {
  bio             String?
  id              Int         @id @default(autoincrement())
  user_id         Int
  user            User        @relation(fields: [username], references: [username])
  username        String
}

model User {
  email           String      @unique
  username        String      @unique
  name            String? 
  id              Int         @id @default(autoincrement())
  notes           Note[]  
  profiles        Profile[] 
  roles           Role[]    
  studies         Study[]
  sessions        Session[]
  subjects        Subject[]
}

model Subject {
  email           String    @unique 
  name            String?
  id              Int       @id @default(autoincrement())
  subject_id      String    @unique
  dob             Int?
  gender          String?
  studies         Study[]
  notes           Note[]
  coordinators    User[]
  sessions        Session[]
}

model Session {
  session_id      String      @unique
  name            String?
  id              Int         @id @default(autoincrement())
  notes           Note[]
  profiles        Profile[]
  subject         Subject     @relation(fields: [subject_id], references: [id])
  subject_id      String
  study           Study       @relation(fields: [studyName], references: [shortName])
  studyName       String      
  modalities      Modality[]  @relation(fields: [modality_type], references: [type])
  modality_type   String
}

model Modality {
  id              Int         @id @default(autoincrement())
  type            String 
}

model Role {
  id              Int         @id @default(autoincrement())
  name            String
}